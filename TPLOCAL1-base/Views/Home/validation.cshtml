@model TPLOCAL1.Models.FormModel


<head>
    <title> Validation</title>

    <link rel="stylesheet" href="~/resources/Index.css" />
</head>

<body>
    <header>
        <img src="~/resources/GroupeHN.png" class="image" alt="GroupeHN" />
    </header>

    <nav>
        <ul>
            <li><a href="/Home/Index">Accueil</a></li>
            <li><a href="/Home/Index/ListeAvis">Liste avis</a></li>
        </ul>
    </nav>

    <section>
        <p>Votre formulaire a bien été pris en compte</p>

        <table>
            <caption>Informations personnelles</caption>
            <tr>
                <td>Nom</td>
                <td>@Model.Nom</td>
            </tr>
            <tr>
                <td>Prénom</td>
                <td>@Model.Prenom</td>
            </tr>
            <tr>
                <td>Sexe</td>
                <td>
                    @{
                        switch (Model.Genre)
                        {
                            case "H":
                                <span>Homme</span>
                                ; break;
                            case "F":

                                <span>Femme</span>
                                ; break;
                            case "A":

                                <span>Autre</span>
                                ; break;
                            default:

                                <span>@Model.Genre</span>
                                ; break;
                        }
                    }
                </td>
            </tr>
            <tr>
                <td>Adresse</td>
                <td>@Model.Adresse</td>
            </tr>
            <tr>
                <td>Code Postal</td>
                <td>@Model.CodePostal</td>
            </tr>
            <tr>
                <td>Ville</td>
                <td>@Model.Ville</td>
            </tr>
            <tr>
                <td>Adresse mail</td>
                <td>@Model.Email</td>
            </tr>
        </table>

        <table>
            <caption>Informations formation suivie</caption>
            <tr>
                <td>Date début formation</td>
                <td>@Model.DateDebut.ToString("dd/MM/yyyy")</td>
            </tr>
            <tr>
                <td>Formation suivie</td>
                <td>@Model.Formation</td>
            </tr>
        </table>

        <table>
            <caption>Avis sur la formation</caption>
            <tr>
                <td>Formation Cobol</td>
                <td>@Model.Aviscobol</td>
            </tr>
            <tr>
                <td>Formation C#</td>
                <td>@Model.Aviscsharp</td>
            </tr>
        </table>
    </section>
</body>
